<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:XPlaneWPF.Controls"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    >
    
    
    
    
    <LinearGradientBrush x:Key="WindowBackground" StartPoint="0 0" EndPoint="0.1 1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#FF18709A"/>
            <GradientStop Color="#FF050F15" Offset="1.0"/>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="DefaultBackground" Color="Black"/>
    <SolidColorBrush x:Key="Text" Color="White"/>
</ResourceDictionary>
